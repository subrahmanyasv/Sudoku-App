<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sudoku" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Sudoku" parent="Base.Theme.Sudoku" />

        <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="AchievementItemStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:gravity">center_horizontal</item>
            <item name="android:layout_margin">8dp</item>
        </style>

        <style name="AchievementIconStyle">
            <item name="android:layout_width">70dp</item>
            <item name="android:layout_height">70dp</item>
            <item name="android:contentDescription">Achievement Icon</item>
            <item name="android:layout_marginBottom">4dp</item>
            <item name="android:padding">5dp</item>
        </style>

        <style name="AchievementTextStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">12sp</item>
            <item name="android:gravity">center</item>
        </style>

</resources>
