<resources>
    <!-- Style for the game control buttons (Undo, Erase, Hint) -->
    <style name="GameControlButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#94A3B8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for the SELECTED leaderboard tab -->
    <style name="LeaderboardTab.Selected" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_selected_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for the UNSELECTED leaderboard tab -->
    <style name="LeaderboardTab.Unselected" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#94A3B8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ### ADD THESE STYLES FOR PROFILE STATS ### -->
    <!-- Style for the main stat card (e.g., Games Played) -->
    <style name="ProfileStatCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Style for the stat card label (e.g., "Games Played") -->
    <style name="ProfileStatLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#94A3B8</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for the stat card value (e.g., "128") -->
    <style name="ProfileStatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ############################################ -->

    <style name="GameControlLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="GameControlIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="tint">@color/text_secondary</item>

    </style>

    <style name="GameControlLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>

    </style>



    <style name="NumberPadButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:background">@drawable/number_button_background</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:paddingTop">10dp</item>

        <item name="android:paddingBottom">10dp</item>

    </style>

</resources>

