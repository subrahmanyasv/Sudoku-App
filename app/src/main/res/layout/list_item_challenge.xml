<?xml version="1.0" encoding="utf-8"?>
<!-- Relative Path: app/src/main/res/layout/list_item_challenge.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/initial_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_icon_background"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/initial_text"
            android:layout_toStartOf="@+id/status_text"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/challenger_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PuzzlerPro challenged you!"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_to_beat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time to beat: "
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:25"
                    android:textColor="@color/text_accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Status Text (for Outgoing Challenges) -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="PENDING"
            android:textColor="@color/text_warning"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/edit_text_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone" /> <!-- Initially hidden, shown by adapter -->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="visible"> <!-- Keep visible by default, adapter hides if needed -->

        <Button
            android:id="@+id/accept_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"
            android:backgroundTint="@color/difficulty_easy"
            android:textColor="@color/text_primary_inverted"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/decline_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>

