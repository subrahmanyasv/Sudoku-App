<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/card_background"
    android:layout_marginBottom="8dp">

    <!-- Left Side: Difficulty/Opponent, Time/Result, Date -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <!-- Line 1: Difficulty (Standard Game) OR Opponent (Challenge) -->
        <TextView
            android:id="@+id/history_item_line1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Medium Puzzle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Line 2: Time (Standard Game) OR Result (Challenge) -->
        <TextView
            android:id="@+id/history_item_line2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Time: 12:45"
            android:textSize="14sp"
            tools:textColor="@color/accent_blue"
            android:textStyle="italic" />

        <!-- Line 3: Date -->
        <TextView
            android:id="@+id/history_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Oct 26, 2025"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <!-- Right Side: Score (Standard Game) OR Win/Loss Icon (Challenge) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <!-- Standard Game Score (Visible by default) -->
        <TextView
            android:id="@+id/history_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1050"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:textColor="@color/difficulty_medium"
            android:visibility="visible"/>

        <!-- Challenge Result Icon (Gone by default) -->
        <ImageView
            android:id="@+id/history_item_challenge_result_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@drawable/ic_check_circle"
            app:tint="@color/difficulty_easy" />
        <!-- Icon and tint will be set dynamically -->

    </FrameLayout>

</LinearLayout>
