<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/card_background"
    android:layout_marginBottom="8dp">

    <!-- Left Side: Difficulty and Time -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_item_difficulty_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Medium - 12:45"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:textColor="@color/difficulty_medium" /> <!-- Example color -->

        <TextView
            android:id="@+id/history_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Oct 26, 2025"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Right Side: Score -->
    <TextView
        android:id="@+id/history_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1050"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:textColor="@color/difficulty_medium" /> <!-- Example color -->

</LinearLayout>

