<!-- Sudoku-App/app/src/main/res/layout/list_item_saved_game.xml -->
<!-- This is a new layout file for the RecyclerView -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:id="@+id/game_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/continue_play_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saved_game_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Your Game"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saved_game_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Puzzle - 04:12"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/continue_play_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/play_icon_background"
        android:src="@drawable/ic_play"
        app:tint="@color/text_primary_inverted"
        android:contentDescription="Continue Game" />

</RelativeLayout>
