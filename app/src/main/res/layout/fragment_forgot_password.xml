<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#0F131E"
    tools:context=".ForgotPasswordFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku Arena"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:textColor="#94A3B8"
        android:textSize="16sp"
        android:layout_marginBottom="48dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/email_input_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:textColorHint="#94A3B8"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />

    <!-- Send OTP Button -->
    <Button
        android:id="@+id/send_otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:textColor="#10141F"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <!-- OTP Field -->
    <EditText
        android:id="@+id/otp_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:textColorHint="#94A3B8"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- Resend OTP Link -->
    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Didn't receive code? Resend OTP"
        android:textColor="#94A3B8"
        android:gravity="end"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>


    <!-- Verify Button -->
    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify &amp; Reset"
        android:textColor="#10141F"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Back to Login Link -->
    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textColor="#00FFD1"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

