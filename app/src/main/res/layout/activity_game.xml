<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F131E"
    android:padding="16dp"
    tools:context=".GameActivity">

    <!-- Timer -->
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Time\n00:00"
        android:textAlignment="center"
        android:textColor="#94A3B8"
        android:textSize="16sp" />

    <!-- Custom Sudoku Board View -->
    <com.example.sudoku.SudokuBoardView
        android:id="@+id/sudoku_board_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_text"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Control Buttons (Undo, Erase, Hint) -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sudoku_board_view"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/undo_button"
            style="@style/GameControlButton"
            android:text="Undo" />

        <TextView
            android:id="@+id/erase_button"
            style="@style/GameControlButton"
            android:text="Erase" />

        <TextView
            android:id="@+id/hint_button"
            style="@style/GameControlButton"
            android:text="Hint" />
    </LinearLayout>

    <!-- Number Pad -->
    <GridLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/control_buttons"
        android:layout_marginTop="16dp"
        android:columnCount="9"
        android:orientation="horizontal">

        <!-- Use AppCompatButton for better styling control -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_1"
            style="@style/NumberPadButton"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_2"
            style="@style/NumberPadButton"
            android:text="2" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_3"
            style="@style/NumberPadButton"
            android:text="3" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_4"
            style="@style/NumberPadButton"
            android:text="4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_5"
            style="@style/NumberPadButton"
            android:text="5" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_6"
            style="@style/NumberPadButton"
            android:text="6" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_7"
            style="@style/NumberPadButton"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_8"
            style="@style/NumberPadButton"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_9"
            style="@style/NumberPadButton"
            android:text="9" />
    </GridLayout>


    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:text="Submit Puzzle"
        android:textColor="#10141F"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>

