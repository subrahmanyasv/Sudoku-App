<?xml version="1.0" encoding="utf-8"?>
<!-- Relative Path: app/src/main/res/layout/activity_game.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="16dp"
    tools:context=".GameActivity">

    <!-- Header: Back Button, Timer, Pause Button -->
    <RelativeLayout
        android:id="@+id/game_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:onClick="onBackButtonClicked"/>

        <Chronometer
            android:id="@+id/timer_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:format="Time: %s"/>

        <ImageView
            android:id="@+id/pause_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pause"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Pause"/>
    </RelativeLayout>

    <!-- Custom Sudoku Board View -->
    <com.example.sudoku.SudokuBoardView
        android:id="@+id/sudoku_board_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_header"
        android:layout_above="@+id/control_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Control Buttons (Undo, Erase, Hint) -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/solve_button_debug"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/undo_button"
            style="@style/GameControlButton"
            android:drawableTop="@drawable/ic_undo"
            android:text="Undo" />

        <TextView
            android:id="@+id/erase_button"
            style="@style/GameControlButton"
            android:drawableTop="@drawable/ic_eraser"
            android:text="Erase" />

        <TextView
            android:id="@+id/hint_button"
            style="@style/GameControlButton"
            android:drawableTop="@drawable/ic_lightbulb"
            android:text="Hint" />

        <TextView
            android:id="@+id/debug_solve_button"
            style="@style/GameControlButton"
            android:drawableTop="@drawable/ic_check_circle"
            android:text="Solve" />
    </LinearLayout>

    <!-- *** ADDED DEBUG SOLVE BUTTON *** -->
    <Button
        android:id="@+id/solve_button_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_pad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/button_secondary"
        android:textColor="@color/text_warning"
        android:text="DEBUG: SOLVE"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="12sp"
        android:visibility="visible"/> <!-- Keep visible for now -->

    <!-- Number Pad -->
    <GridLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/submit_button"
        android:layout_marginBottom="8dp"
        android:columnCount="9"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_1"
            style="@style/NumberPadButton"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_2"
            style="@style/NumberPadButton"
            android:text="2" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_3"
            style="@style/NumberPadButton"
            android:text="3" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_4"
            style="@style/NumberPadButton"
            android:text="4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_5"
            style="@style/NumberPadButton"
            android:text="5" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_6"
            style="@style/NumberPadButton"
            android:text="6" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_7"
            style="@style/NumberPadButton"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_8"
            style="@style/NumberPadButton"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_9"
            style="@style/NumberPadButton"
            android:text="9" />
    </GridLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:text="Submit Puzzle"
        android:textColor="@color/text_primary_inverted"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Pause Menu Overlay (Initially Gone) -->
    <FrameLayout
        android:id="@+id/pause_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Game Paused"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resume_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/accent_blue"
                android:text="Resume"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/restart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/card_background"
                android:text="Restart"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/quit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_background"
                android:text="Quit Game"
                android:textColor="@color/accent_red" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
