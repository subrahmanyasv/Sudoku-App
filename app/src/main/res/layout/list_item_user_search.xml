<?xml version="1.0" encoding="utf-8"?>
<!-- Relative Path: app/src/main/res/layout/list_item_user_search.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/user_search_initial_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        tools:background="@drawable/circle_profile_background"
        tools:text="U" />

    <TextView
        android:id="@+id/user_search_username_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Username"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <!-- Optional: Add a small challenge icon/button if needed, otherwise remove -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_challenge_swords"
        android:tint="@color/text_secondary"
        android:layout_marginStart="8dp"
        android:contentDescription="Challenge"/>

</LinearLayout>
