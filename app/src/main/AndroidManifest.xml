<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sudoku"
    android:networkSecurityConfig="@xml/network_security_config"
    android:usesCleartextTraffic="true">

    <!-- Launcher Activity -->
    <activity
        android:name=".MainActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Other Activities in the App -->
    <activity
        android:name=".HomeActivity"
        android:exported="false" />
    <activity
        android:name=".DifficultyActivity"
        android:exported="false" />
    <activity
        android:name=".GameActivity"
        android:exported="false" />
    <activity
        android:name=".LeaderboardActivity"
        android:exported="false" />

    <!-- ADDED THE OTHER ACTIVITIES THAT WERE IN THE CODEBASE -->
    <activity
        android:name=".ChallengeActivity"
        android:exported="false" />
    <activity
        android:name=".ProfileActivity"
        android:exported="false" />
    <activity
        android:name=".ResultsActivity"
        android:exported="false" />
        <activity
            android:name=".ChallengeUserSearchActivity"
            android:exported="false"
            android:parentActivityName=".ResultsActivity" /> <!-- Optional: Define parent for Up navigation -->

</application>

    </manifest>

